/**********************************************************************************************************************************************************
 * GALLERY       																																																															            *
 *********************************************************************************************************************************************************/
section#main-content-wrapper {
    width:1140px;
}

section#gallery {
    width: 1140px;
    height: 510px;
    font-family: VAG-HandWritteVAG-HandWritten, Arial, 'sans-serif';
}

/**
 * Categories
 */

section#gallery ul.category-listing {
    margin:5px 0 0 0;
    padding:0;
    font-size: 18px;
}

section#gallery ul.category-listing .category-title {
    line-height: 18px;
    height: 18px;
    margin-bottom: -4px;
    display: none;
}
section#gallery ul.category-listing li {
    margin:0;
    padding:0;
    list-style-type:none;
}

/**
 * Albums
 */
section#gallery ul.album-listing {
    margin:5px 0 0 0;
    padding:0;
    font-size: 18px;
}

section#gallery ul.album-listing .album-title {
    line-height: 18px;
    height: 18px;
    margin-bottom: -4px;
}
section#gallery ul.album-listing li {
    margin:0;
    padding:0;
    list-style-type:none;
}

/**
 * Left Side Images
 */

section#gallery aside#images-left {
    width: 180px;
    float:left;
    padding-left: 5px;
}

section#gallery aside#images-left ul li .album-left-img {
    border: solid 2px #eddd6c;
    margin: 0;
    padding: 0;
    height: 90px;
}

/**
 * Right Side Images
 */
section#gallery aside#images-right {
    width: 180px;
    float:right;
    padding-right: 9px;
}

section#gallery aside#images-right ul li .album-right-img {
    border: solid 2px #eddd6c;
    margin: 0;
    padding: 0;
}

/**
 * Display
 */
section#gallery section#display {
    margin: 0 10px 0 10px;
    float:right;
    width: 740px;
    font-size: 21px;
}
/**********************************************************************************************************************************************************
 *     																																																															            *
 *********************************************************************************************************************************************************/
