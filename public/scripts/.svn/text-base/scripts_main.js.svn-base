$(window).load(function(){
	new Page();
	//new Gallery();
});
 

/**********************************************************************************************************************************************************
 * PAGE Obect				   	 																																																										              *
 **********************************************************************************************************************************************************
 *
 *
 *
 *
 *
 *
*/
var Page = function(){
	var self = this;

	//init layout
	self.constructPage();

	//Init event handlers
	self.bindEvents();
}

Page.prototype.constructPage = function(){
	//Scope resolution
	var self = this;

	//Set middle content height;
	$('#main-content').height(docH - 8);


	//Position Header
	$('#main-header').css({'left': (docW - $('#main-header').width())/2});

	//Audio Player
	$('#audio-player ul').css({'left' :  (docW - $('#audio-player ul').width()) / 2});
}

Page.prototype.bindEvents = function(){
	var self = this;
}

/************************************************************* END ***************************************************************************************/
